{
  "logging": {
    "console-sink": { "level": "debug" },
    "file-sink": { "level": "debug" }
  },
  "semantic-web": {
    "prefixes": [
      { "alias": "lpn", "uri":  "http://knowrob.org/kb/lpn" }
    ]
  },
  "data-sources": [
    {
      "path": "tests/owl/lpn.owl",
      "format": "turtle"
    }
  ],
  "data-backends": [
    {
      "type": "MongoDB",
      "name": "mongodb",
      "host": "localhost",
      "port": 27017,
      "db": "test",
      "read-only": false,
      "drop": "*"
    }
  ],
  "reasoner": [
    {
      "name": "mongolog_reasoner",
      "type": "Mongolog",
      "data-backend": "mongodb",
      "imports": [
        {
          "path": "tests/prolog/mongolog_lpn.pl",
          "format": "prolog"
        }
      ]
    }
  ]
}
